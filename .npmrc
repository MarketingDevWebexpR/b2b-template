# pnpm configuration for Expo/React Native monorepo
# These settings ensure all dependencies are hoisted to the root
# which is required for Metro bundler and Expo plugins to resolve correctly

node-linker=hoisted
shamefully-hoist=true

# Ensure packages that need hoisting are properly handled
public-hoist-pattern[]=*expo*
public-hoist-pattern[]=*react*
public-hoist-pattern[]=*react-native*
public-hoist-pattern[]=*@react-navigation*
public-hoist-pattern[]=*nativewind*
public-hoist-pattern[]=*tailwindcss*

# Required for Vercel to properly resolve workspace dependencies
enable-pre-post-scripts=true

# GitHub Packages Registry for @maison scoped packages
@maison:registry=https://npm.pkg.github.com
//npm.pkg.github.com/:_authToken=${GITHUB_TOKEN}
