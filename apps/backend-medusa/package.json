{
  "name": "@maison/backend-medusa",
  "version": "1.0.0",
  "private": true,
  "description": "Medusa V2 backend for B2B e-commerce - companies, quotes, approvals, spending limits",
  "keywords": [
    "medusa",
    "e-commerce",
    "b2b",
    "backend"
  ],
  "scripts": {
    "dev": "medusa develop",
    "build": "echo 'Backend build skipped - use medusa:build for production' && tsc --noEmit",
    "medusa:build": "medusa build",
    "start": "medusa start",
    "seed": "medusa exec ./src/scripts/seed.ts",
    "seed:categories": "medusa exec ./src/scripts/seed-categories.ts",
    "db:generate": "medusa db:generate",
    "db:migrate": "medusa db:migrate",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf .medusa node_modules dist",
    "search:test": "npx ts-node scripts/test-appsearch.ts",
    "search:sync": "npx ts-node scripts/initial-sync-appsearch.ts",
    "search:rollback": "npx ts-node scripts/search-rollback.ts",
    "search:compare": "npx ts-node scripts/compare-search-engines.ts"
  },
  "dependencies": {
    "@medusajs/admin-sdk": "^2.12.2",
    "@medusajs/framework": "latest",
    "@medusajs/medusa": "latest",
    "awilix": "^8.0.1",
    "meilisearch": "^0.54.0",
    "multer": "^2.0.2",
    "pg": "^8.11.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@medusajs/types": "latest",
    "@swc/core": "^1.4.0",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.11.0",
    "@types/pg": "^8.10.0",
    "dotenv": "^16.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
