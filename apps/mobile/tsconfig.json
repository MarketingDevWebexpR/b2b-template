{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsxImportSource": "nativewind",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@bijoux/types": [
        "../../packages/types/src"
      ],
      "@bijoux/utils": [
        "../../packages/utils/src"
      ],
      "@bijoux/config-tailwind": [
        "../../packages/config-tailwind/src"
      ],
      "@bijoux/config-tailwind/*": [
        "../../packages/config-tailwind/src/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}